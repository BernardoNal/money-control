<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto ">

 <div class="w-full bg-gray-800 text-white rounded-lg shadow p-6 ">
  <h1>Editar Usu√°rio</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

     <div class="m-5">
        <%= f.label :email, class: "block" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-gray-50 text-gray-900 border border-gray-400 m-2 text-sm p-2.5" %>
      </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="m-5">
      <%= f.label :password, class: "block" %> <p class="text-sm">(leave blank if you don't want to change it)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-gray-50 text-gray-900 border border-gray-400 m-2 text-sm p-2.5" %>
     <p class="text-sm">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
    </div>

    <div class="m-5">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-gray-50 text-gray-900 border border-gray-400 m-2 text-sm p-2.5" %>
    </div>

    <div class="m-5">
      <%= f.label :current_password %> <p class="text-sm">(we need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-gray-50 text-gray-900 border border-gray-400 m-2 text-sm p-2.5" %>
    </div>

    <div class="text-center m-4">
      <%= f.submit "Update", class: "bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300  rounded-full  px-4 py-2 text-center mb-2" %>
    </div>
  <% end %>

 <div class = "text-center m-2">

  <div><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: " bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300  rounded-full  px-4 py-2 text-center mb-2" %></div>

  <%= link_to "Back", :back %>

 </div>
  </div>

 </div>
