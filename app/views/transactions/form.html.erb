
<div class="container  mt-4">
  <%= link_to transactions_path, class: 'bg-black text-white text-decoration-none p-2' do %>
    <i class='fa-solid fa-circle-left'></i>volta
  <% end %>
  <h1 class="pb-3 text-center"><%= @transaction.persisted? ? 'Editar Conta' : 'Nova Conta' %></h1>
  <div class="mx-3">
    <%= form_with model: @transaction, local: true do |f| %>
      <div class="grid grid-cols-3">
        <div class="mx-auto">
          <%= f.label :amount, "Valor", class: "block mb-2 text-sm font-medium text-gray-900 " %>
          <%= f.number_field :amount, step: 0.01, class: "border border-gray-400 m-2  text-sm rounded-lg p-2.5", placeholder: "0,00", required: true%>
        </div>
          <div class="mx-auto">
          <%= f.label :description, "Descrição", class: "block mb-2 text-sm font-medium text-gray-900 " %>
          <%= f.text_field :description, class: "border border-gray-400 m-2 text-sm rounded-lg p-2.5",  placeholder: "Energia, lanche, estudos"  %>
        </div>
        <div class="mx-auto">
          <%= f.label :to_whom, "Recebedor/Pagador", class: "block mb-2 text-sm font-medium text-gray-900 " %>
          <%= f.text_field :to_whom, class: "border border-gray-400 m-2 text-sm rounded-lg p-2.5",  placeholder: "Banco X, Amazon..."  %>
        </div>
        <div class="mx-auto">
          <%= f.label :payment_method, "Método de pagamento", class: "block mb-2 text-sm font-medium text-gray-900 " %>
          <%= f.text_field :payment_method, class: "border border-gray-400 m-2  text-sm rounded-lg p-2.5", placeholder: "Débito,PIX,.."%>
        </div>
          <div class="mx-auto">
          <%= f.label :date, "Data", class: "block mb-2 text-sm font-medium text-gray-900 " %>
          <%= f.date_field :date, step: 0.01, class: "border border-gray-400 m-2  text-sm rounded-lg p-2.5", placeholder: "100,00"%>
        </div>
        <div class="mx-auto">
          <%= f.label :category_id, "Selecione a Categoria", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.select :category_id, @categories.collect { |c| [c.name, c.id] }, { prompt: "Selecione" }, class: "border border-gray-400 m-2 text-sm rounded-lg p-2.5" %>
        </div>
      <div class="col-span-3 mx-auto my-2">
        <%= f.button :submit, class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300  rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 " %>
      </div>
      </div>
    <% end %>
  </div>
</div>
